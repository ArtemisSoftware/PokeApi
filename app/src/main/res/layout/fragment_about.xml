<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pokemon"
            type="com.artemissoftware.pokeapi.models.PokemonResult" />
    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AboutFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <TextView
                android:id="@+id/txt_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textSize="12sp"
                android:textColor="@color/color_secondary_text" />


            <TextView
                android:text="@{pokemon.height, default=height}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_height"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/color_primary_text" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/txt_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="12sp"
                android:textColor="@color/color_secondary_text" />


            <TextView
                android:text="@{pokemon.weight, default=weight}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_weight"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/color_primary_text" />

        </RelativeLayout>


        <!--  Location   -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="18dp">

            <TextView
                android:id="@+id/id_LocationTitle_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="12sp"
                android:textColor="@color/color_secondary_text" />


            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/tag_group"
                style="@style/TagGroup"
                android:layout_below="@+id/id_LocationTitle_TextView"
                android:layout_marginTop="16dp"
                app:atg_textSize="16dp"
                app:atg_horizontalSpacing="10dp"
                app:atg_borderColor="@color/color_primary_text"/>


        </RelativeLayout>


    </LinearLayout>
</FrameLayout>

</layout>